условия задачи для контрольной:
задача на список
реализовать метод
удаляет все нечетные элементы (по значению нечетные) из списка
все работы на указатели в методе т е del iтое нельзя
void removeOdd() {
    Link* prev = head;
    Link* curr = head->next;

    while (curr != head) {
        if (curr->val % 2 != 0) { // нечётное
            prev->next = curr->next;
            if (curr == last) last = prev; // если удаляем последний
            delete curr;
            curr = prev->next;
        } else {
            prev = curr;
            curr = curr->next;
        }
    }
}
int main() {
    HList l;
    l.addlast(1);
    l.addlast(2);
    l.addlast(3);
    l.addlast(4);
    l.addlast(5);

    l.removeOdd(); // удаляем все нечётные → [2,4]

    cout << "Size: " << l.Size() << "\n"; // 2
}


задание на конечные автоматы
слово принадлежит языку если оно содержит хотя бы 2 целых числа
реализовать конечный автомат с 5 состояниями 
можно case использовать
слово разделено пробелами и числом считается только числа разделенные пробелом
для проверки является ли числом нужно сравнивать с 0 и 9 больше = 0 и меньше = 9


#include <iostream>
#include <string>
using namespace std;

enum State { S0, S1, S2, SNUM, SERR };

bool belongsToLanguage(const string& input) {
    State st = S0;
    int countNumbers = 0;
    bool inNumber = false;

    for (size_t i = 0; i <= input.size(); ++i) {
        char c = (i < input.size() ? input[i] : ' '); // добавляем пробел в конце

        switch (st) {
        case S0:
        case S1:
        case S2:
            if (c >= '0' && c <= '9') {
                st = SNUM;
                inNumber = true;
            }
            break;

        case SNUM:
            if (c >= '0' && c <= '9') {
                // остаёмся в числе
            } else if (c == ' ') {
                // число закончилось
                countNumbers++;
                if (countNumbers == 1) st = S1;
                else if (countNumbers == 2) st = S2;
                inNumber = false;
            } else {
                st = SERR; // ошибка
            }
            break;

        case SERR:
            if (c == ' ') st = S0; // сброс
            break;
        }
    }

    return (st == S2 || countNumbers >= 2);
}

int main() {
    string s;
    cout << "Введите строку: ";
    getline(cin, s);

    if (belongsToLanguage(s))
        cout << "Слово принадлежит языку (>=2 числа)\n";
    else
        cout << "Слово НЕ принадлежит языку\n";

    return 0;
}

добавь описание
enum State { 
    S0, //
    S1, //
    S2, //
    SNUM, //
    SERR //
};
сделай через if else
char c = (i < input.size() ? input[i] : ' '); // добавляем пробел в конце

#include <iostream>
#include <string>
using namespace std;

enum State { S0, S1, S2, SNUM, SERR };

bool belongsToLanguage(const string& input) {
    State st = S0;
    int countNumbers = 0;
    bool inNumber = false;

    for (size_t i = 0; i <= input.size(); ++i) {
        char c = (i < input.size() ? input[i] : ' '); // добавляем пробел в конце

        if (st == S0 || st == S1 || st == S2) {
            if (c >= '0' && c <= '9') {
                st = SNUM;
                inNumber = true;
            }
        }
        else if (st == SNUM) {
            if (c >= '0' && c <= '9') {
                // остаёмся внутри числа
            } else if (c == ' ') {
                // число закончилось
                countNumbers++;
                if (countNumbers == 1) st = S1;
                else if (countNumbers == 2) st = S2;
                inNumber = false;
            } else {
                st = SERR; // ошибка
            }
        }
        else if (st == SERR) {
            if (c == ' ') {
                st = S0; // сброс после ошибки
            }
        }
    }

    return (st == S2 || countNumbers >= 2);
}

int main() {
    string s;
    cout << "Введите строку: ";
    getline(cin, s);

    if (belongsToLanguage(s))
        cout << "Слово принадлежит языку (>=2 числа)\n";
    else
        cout << "Слово НЕ принадлежит языку\n";

    return 0;
}
 enum State { 
    S0,   // начальное состояние, пока не найдено ни одного числа
    S1,   // найдено одно число
    S2,   // найдено два числа (принимающее состояние)
    SNUM, // внутри числа (читаем цифры)
    SERR  // ошибка (например, встретили нецифровой символ внутри числа)
};





